{
  "frontend": {
    "component_pattern": {
      "style": "CSS Modules + WDS Tokens",
      "structure": "Folder-based (Component/Component.tsx, Component.module.css)",
      "utils": "clsx for conditional classes",
      "layout": "Tailwind for layout only (flex, grid, gap)",
      "rules": [
        "Use CSS Modules with WDS token variables",
        "Wrap Radix UI primitives for complex interaction",
        "Export from index.ts"
      ]
    },
    "state_management": {
      "server": "React Query (TanStack Query)",
      "client": "Zustand (Persist middleware for settings)"
    },
    "form_pattern": {
      "library": "react-hook-form",
      "validation": "zod schema",
      "rules": "Must use zodResolver"
    },
    "wds_tokens": {
      "colors": [
        "--color-orange-500",
        "--color-grey-50",
        "--color-financial-*",
        "--color-brix-*"
      ],
      "typography": [
        "w1 (Headline)",
        "w4 (Body)",
        "financial-* (Tabular Nums)"
      ],
      "motion": "Standard easing, 150ms~400ms duration"
    }
  },
  "backend": {
    "spring_boot": {
      "architecture": "Controller -> Service -> Mapper -> DB",
      "api_response": "Wrap all responses in ApiResponse<T>",
      "db_access": "MyBatis with XML Mappers (Oracle SQL)",
      "concurrency": "Optimistic Lock (version) default, Pessimistic Lock (SFU) for money"
    },
    "django": {
      "role": "Sub Backend (Read/Compute Only)",
      "restrictions": [
        "NO INSERT/UPDATE/DELETE on Oracle directly"
      ],
      "patterns": "DRF ViewSets, Elasticsearch Queries"
    }
  },
  "general": {
    "architecture": "3-Tier (React - Spring/Django - Oracle)",
    "commit_message": "Type: Subject \\n\\n Body"
  }
}